<%= form_tag api_v1_skyscanner_claim_lists_results_path, method: :post do %>
              <h3 style='color:green;text-align:center'>Ucak bileti arayiniz</h3>
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">From</label>
                  <div class="col-sm-10">
                     <label for="inputEmail3" class="col-sm-2 control-label"><%= select_tag(:from, options_for_select( @air_ports["Places"].map{|ap| [ap["PlaceName"], ap["PlaceId"]]})) %></label>
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-2 control-label">To</label>
                  <div class="col-sm-10">
                    <label for="inputEmail3" class="col-sm-2 control-label"><%= select_tag(:to, options_for_select(@air_ports["Places"].map{|ap| [ap["PlaceName"], ap["PlaceId"]]})) %></label>
                  </div>
                </div>
                 <div class="form-group">
                  <label for="inputPassword3" class="col-sm-2 control-label">Out Date</label>
                  <div class="col-sm-10">
                      <%= date_field_tag 'outdate' %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                     <%= submit_tag 'Search', class: "btn btn-info" %>
                  </div>
                </div>
<% end %>
